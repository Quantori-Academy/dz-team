{
    "name": "project-mayfly",
    "version": "0.0.0",
    "repository": "https://github.com/Quantori-Academy/dz-team.git",
    "private": true,
    "workspaces": [
        "packages/be",
        "packages/fe"
    ],
    "type": "module",
    "packageManager": "yarn@1.22.22",
    "scripts": {
        "dev": "run-p dev:be dev:fe",
        "dev:be": "yarn workspace be run dev",
        "dev:fe": "yarn workspace fe run dev",
        "build": "yarn build:be & yarn build:fe",
        "build:be": "yarn workspace be run build",
        "build:fe": "yarn workspace fe run build",
        "preview": "run-p preview:be preview:fe",
        "preview:be": "yarn workspace be run preview",
        "preview:fe": "yarn workspace fe run preview",
        "prod": "run-p prod:be prod:fe",
        "prod:be": "yarn workspace be run prod",
        "prod:fe": "yarn workspace fe run prod",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --max-warnings 0",
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/eslint__js": "^8.42.3",
        "eslint": "^9.9.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.11",
        "globals": "^15.9.0",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.10",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.3",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.3.0",
        "eslint-plugin-effector": "^0.14.0",
        "eslint-plugin-react": "^7.35.2",
        "eslint-plugin-simple-import-sort": "^12.1.1"
    }
}
