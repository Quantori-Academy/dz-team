{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client",
            "vite-plugin-svgr/client"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "moduleDetection": "force",
        "baseUrl": "src",
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ]
}
