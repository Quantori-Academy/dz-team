{
    "name": "be",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "cross-env NODE_ENV=development tsx src/index.ts",
        "dev:db": "yarn db && run-p dev:watch studio",
        "db:build": "docker-compose build",
        "db": "docker-compose up -d",
        "dev:watch": "prisma migrate dev && cross-env NODE_ENV=development tsx watch src/index.ts",
        "studio": "prisma migrate dev && prisma studio",
        "preview": "yarn build && cross-env NODE_ENV=development node dist/index.js",
        "prod": "prisma generate && prisma migrate deploy && cross-env NODE_ENV=production node dist/index.js"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@prisma/client": "^5.19.1",
        "fastify": "^4.28.1",
        "prisma": "^5.19.1"
    },
    "devDependencies": {
        "@types/node": "^22.5.2",
        "cross-env": "^7.0.3",
        "tsx": "^4.19.1",
        "typescript": "^5.5.4"
    }
}
