{
    "name": "be",
    "version": "0.0.0",
    "prisma": {
        "seed": "node prisma/seed.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
        "dev:db": "yarn db && run-p dev studio",
        "db:build": "docker-compose build",
        "db": "docker-compose up -d & prisma generate & prisma migrate dev",
        "db:seed": "prisma db seed",
        "db:stop": "docker-compose down",
        "studio": "prisma studio",
        "preview": "yarn build && cross-env NODE_ENV=development node dist/index.js",
        "db:reset": "prisma migrate reset --force",
        "db:preprod": "prisma migrate deploy",
        "prod": "cross-env NODE_ENV=production node dist/be/src/index.js"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/jwt": "^8.0.1",
        "@fastify/swagger": "^7.6.1",
        "@prisma/client": "^5.20.0",
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^5.1.1",
        "fastify": "^4.28.1",
        "fastify-type-provider-zod": "^4.0.2",
        "init": "^0.1.2",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "prisma": "^5.20.0",
        "uuid": "^11.0.2"
    },
    "devDependencies": {
        "@types/node": "^22.5.2",
        "cross-env": "^7.0.3",
        "tsx": "^4.19.1",
        "typescript": "^5.5.4",
        "zod-prisma-types": "^3.1.8"
    }
}
