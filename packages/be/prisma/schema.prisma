generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [rdkit]
}

model Molecule {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  smiles    String
}

model Reagent {
  id             Int      @id @default(autoincrement())
  name           String   // Name of the reagent
  category       Category // Category (reagent or sample)
  structure      String   // Chemical structure data
  description    String  // Description of reagent
  quantityLeft   Float    // Quantity left in stock
  storageLocation String // Location of the reagent (Room, Cabinet, Shelf)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum Category {
  REAGENT
  SAMPLE
}